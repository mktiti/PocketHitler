<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <padding
                    android:top="5dp"
                    android:right="5dp"
                    android:bottom="5dp"
                    android:left="5dp" />

            <stroke
                    android:width="2dp"
                    android:color="@color/fascistColor" />
        </shape>
    </item>

    <item
            android:width="50dp"
            android:height="50dp"
            android:gravity="center">
        <shape android:shape="oval">
            <corners
                    android:radius="1dp" />
            <solid android:color="@color/fascistColor"/>
        </shape>
    </item>

    <item android:drawable="@drawable/no_action_drawable" android:gravity="center" />

</layer-list>